- content_for :header_tags do
  = render_initial_state
  = javascript_pack_tag 'public', crossorigin: 'anonymous'

- content_for :content do
  .admin-wrapper
    .sidebar-wrapper
      .sidebar-wrapper__inner
        .windowContainer.adminWindow
          .windowHeaderContainer
            %img{ src: '/alt/windowHeaderLeftBorder.png' }
            .windowHeader
              .windowFaviconContainer
                %img 
              .windowTitleContainer
                %h1.windowTitle Sidebar
              .windowSpacing
              .verticalAlign
                .minimizeButton
              .verticalAlign
                .maximizeButton
              .verticalAlign
                .closeButton
            %img{ src: '/alt/windowHeaderRightBorder.png' }
          .windowBody
            .mastodonContent
              .sidebar
                = link_to root_path do
                  %img.logoImage{ src: '/alt/logo.png' }

                .sidebar__toggle
                  .sidebar__toggle__logo
                    = link_to root_path do
                      = svg_logo_full

                  = link_to '#', class: 'sidebar__toggle__icon' do
                    = fa_icon 'bars'

                = render_navigation

    .content-wrapper
      .windowContainer.adminWindow
        .windowHeaderContainer
          %img{ src: '/alt/windowHeaderLeftBorder.png' }
          .windowHeader
            .windowFaviconContainer
              %img 
            .windowTitleContainer
              %h1.windowTitle= yield :page_title
            .windowSpacing
            .verticalAlign
              .minimizeButton
            .verticalAlign
              .maximizeButton
            .verticalAlign
              .closeButton
          %img{ src: '/alt/windowHeaderRightBorder.png' }
        .windowBody
          .mastodonContent
            .content
              .content-heading
                %h2= yield :page_title

                - if :heading_actions
                  .content-heading-actions
                    = yield :heading_actions

              = render 'application/flashes'

              = yield

    .sidebar-wrapper.sidebar-wrapper--empty

= render template: 'layouts/application'
